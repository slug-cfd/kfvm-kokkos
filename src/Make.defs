# Compile time defines
DEFINES = -DSPACE_DIM=$(DIM) -DSTENCIL_RADIUS=$(STENRAD) -DNUM_QUAD_PTS=$(NUMQUAD)

# Compiler flags
CXXFLAGS = -g -Wall -Wextra -fmax-errors=10 $(DEFINES)

# All external dependencies
KFVM_LIBS = -lhdf5_hl -lhdf5 -lsz -lz -llapack -lblas -lgsl -lgslcblas -lcerf -lm

# Suffix for executables
OPT_SUFFIX = .R$(STENRAD).NQ$(NUMQUAD)
