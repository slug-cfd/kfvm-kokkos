# Set mesh resolution and extent
mesh:resolution NG NG
mesh:numblocks 1 1
mesh:extent -10.0 10.0 -10.0 10.0

# Set time information
time:final 20.0
time:mindt 1.e-10
time:cfl 0.5
time:maxsteps 20000
time:atol 1.e-6
time:rtol 1.e-6

# Set stencil options
stencil:lfac 5

# Set fluid properties
eos:gamma 1.666666666666
eos:wenothresh -1.0

# Output settings
io:pdiconf ../../../user/pdi_mhd_8w_xdmf.yml
io:datadir data/Weno
io:basename MagVort
io:plotfreq -1.0
io:ckptfreq 10000
io:verbose 1
